<div class="navbar bg-purple-900">
    <div class="flex-1 ml-4">
        <a href="/" class="text-black hover:text-gray-400 text-xl font-bold">Lego Collection</a>
    </div>
    <div class="navbar-center hidden sm:flex">
        <ul class="menu menu-horizontal px-1">
            <li><a class="text-black hover:text-gray-400 <%= (page === '/lego/sets' ? 'active' : '') %> font-bold" href="/lego/sets">View Collection</a></li>
            <li><a class="text-black hover:text-gray-400 <%= (page === '/about' ? 'active' : '') %> font-bold" href="/about">About</a></li>
            <% if (session && session.user) { %>
                <li>
                    <details>
                        <summary class="font-bold">Account: <%= session.user.userName %></summary>
                        <ul class="p-2 right-0">
                            <li><a class="<%= (page === '/lego/addSet' ? 'active' : '') %>" href="/lego/addSet">Add to Collection</a></li>
                            <li><a class="<%= (page === '/userHistory' ? 'active' : '') %>" href="/userHistory">User History</a></li>
                            <li><a href="/logout">Log Out</a></li>
                        </ul>
                    </details>
                </li>
            <% } else { %>
                <li>
                    <details>
                        <summary class="font-bold">Account</summary>
                        <ul class="p-2 right-0">
                            <li><a class="<%= (page === '/login' ? 'active' : '') %>" href="/login">Login</a></li>
                            <li><a class="<%= (page === '/register' ? 'active' : '') %>" href="/register">Register</a></li>
                        </ul>
                    </details>
                </li>
            <% } %>
        </ul>
    </div>
</div>

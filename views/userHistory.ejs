<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User History</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body class="bg-white">
    <%- include('partials/navbar', { page: '/lego/userHistory' }) %>

  <div class="container mx-auto p-4">
    <div class="hero bg-gray-100 rounded-lg p-6">
        <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold"><%= session.user.userName %></h1>
          <p class="py-6">User History: <%= session.user.email %></p>
        </div>
      </div>
    </div>

    <br />

    <table class="table">
        <thead>
        <tr>
          <th>Login Date/Time</th>
          <th>Client Information</th>
        </tr>
      </thead>
      <tbody>
        <% session.user.loginHistory.forEach(entry => { %>
          <tr>
            <td><%= entry.dateTime %></td>
            <td><%= entry.userAgent %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  
</body>
</html>